{
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/blog",
      "dest": "/api/blog.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}